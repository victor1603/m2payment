<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="liqpaymagento_liqpay" translate="label" type="text" sortOrder="50" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>LiqPay</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sandbox" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sandbox_order_sufix" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Test Order Surfix</label>
                    <comment><![CDATA[For example: 000000005-<b>test</b>]]></comment>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Title</label>
                </field>
                <field id="active_shipping" translate="label" type="multiselect" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Active for shipping methods</label>
                    <source_model>CodeCustom\Payments\Model\Config\Source\ShippingMethods</source_model>
                </field>
                <field id="public_key" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Public Key</label>
                </field>
                <field id="private_key" translate="label" type="obscure" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Private Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="60" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="70" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                </field>
                <field id="description" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Order Description</label>
                </field>
                <field id="security_check" translate="label" type="select" sortOrder="90" showInDefault="0" showInWebsite="0"
                       showInStore="0">
                    <label>LiqPay Callback Security Check</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Enable keys validation on request callback from liqpay. Don't set "No" because of fraud!]]></comment>
                </field>
            </group>
            <group id="parts_payment" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Parts Payment</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="dev_mode" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Developer MODE</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If enabled - cURL not used tunnel access, disable this option if used on vodafone.ua</comment>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Titile</label>
                </field>
                <field id="checkout_error" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Checkout item error message</label>
                </field>
                <field id="min_price" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Min product price</label>
                    <validate>validate-number</validate>
                </field>
                <field id="active_shipping" translate="label" type="multiselect" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Active for shipping methods</label>
                    <source_model>CodeCustom\Payments\Model\Config\Source\ShippingMethods</source_model>
                </field>
                <field id="store_id" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Store ID</label>
                </field>
                <field id="store_password" translate="label" type="password" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Store Password</label>
                </field>
                <field id="scheme" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Scheme</label>
                </field>
                <field id="recipient_id" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Recipient ID</label>
                </field>
                <field id="merchant_type" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Merchant Type</label>
                    <comment>PP - parts payment</comment>
                </field>
                <field id="sand_box" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sand_box_prefix" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Order ID PREFIX</label>
                    <comment>You can add _ symbol between prefix and order ID, example: testprefix_</comment>
                </field>
                <field id="sand_box_store_id" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Store ID</label>
                </field>
                <field id="sand_box_store_password" translate="label" type="password" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Password</label>
                </field>
                <field id="response_url" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Response URL</label>
                </field>
                <field id="redirect_url" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Redirect URL</label>
                </field>
            </group>
            <group id="instant_payment" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Instant Installment Payment</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="dev_mode" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Developer MODE</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If enabled - cURL not used tunnel access, disable this option if used on vodafone.ua</comment>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="checkout_error" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Checkout error message</label>
                </field>
                <field id="min_product_price" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Min product price</label>
                    <validate>validate-number</validate>
                </field>
                <field id="active_shipping" translate="label" type="multiselect" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Active for shipping methods</label>
                    <source_model>CodeCustom\Payments\Model\Config\Source\ShippingMethods</source_model>
                </field>
                <field id="store_id" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Store ID</label>
                </field>

                <field id="store_password" translate="label" type="password" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Store Password</label>
                </field>

                <field id="scheme" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Scheme</label>
                </field>

                <field id="recipient_id" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Recipient ID</label>
                </field>

                <field id="merchant_type" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Merchant Type</label>
                    <comment>II - instant payment</comment>
                </field>

                <field id="sand_box" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sand_box_prefix" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Order ID PREFIX</label>
                    <comment>You can add _ symbol between prefix and order ID, example: testprefix_</comment>
                </field>
                <field id="sand_box_store_id" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Store ID</label>
                </field>
                <field id="sand_box_store_password" translate="label" type="password" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sand BOX Password</label>
                </field>

                <field id="response_url" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Response URL</label>
                </field>
                <field id="redirect_url" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Redirect URL</label>
                </field>
            </group>
        </section>
    </system>
</config>